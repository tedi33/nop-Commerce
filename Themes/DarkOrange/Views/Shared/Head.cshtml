@using Nop.Core;
@using Nop.Core.Infrastructure;
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/DarkOrange/Content/css/styles.rtl.css");
    }
    
    Html.AppendCssFileParts("~/Themes/DarkOrange/Content/css/styles.css");
    
}